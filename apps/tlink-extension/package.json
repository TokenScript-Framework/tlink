{
  "name": "tlink-extension",
  "displayName": "Tlink extension",
  "version": "0.0.1",
  "description": "Enable TLinks on Twitter",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "package:chrome": "plasmo build --target=chrome-mv3 --zip",
    "package:firefox-mv2": "plasmo build --target=firefox-mv2 --zip",
    "package:firefox-mv3": "plasmo build --target=firefox-mv3 --zip",
    "package:edge": "plasmo build --target=edge-mv3 --zip",
    "package:brave": "plasmo build --target=brave-mv3 --zip",
    "package:opera": "plasmo build --target=opera-mv3 --zip",
    "package:all": "npm run package:chrome && npm run package:firefox-mv2 && npm run package:firefox-mv3 && npm run package:edge && npm run package:brave && npm run package:opera"
  },
  "dependencies": {
    "plasmo": "0.89.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1",
    "@repo/tlinks": "workspace:*"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://twitter.com/*",
      "https://x.com/*"
    ],
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ]
  }
}
