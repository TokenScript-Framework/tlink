{
  "name": "tlink-extension",
  "displayName": "Tlink",
  "version": "0.1.1",
  "description": "Enable Tlinks on Twitter",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "package:chrome": "plasmo build --target=chrome-mv3 --zip",
    "package:firefox-mv2": "plasmo build --target=firefox-mv2 --zip",
    "package:firefox-mv3": "plasmo build --target=firefox-mv3 --zip",
    "package:edge": "plasmo build --target=edge-mv3 --zip",
    "package:brave": "plasmo build --target=brave-mv3 --zip",
    "package:opera": "plasmo build --target=opera-mv3 --zip",
    "package:all": "npm run package:chrome && npm run package:firefox-mv2 && npm run package:firefox-mv3 && npm run package:edge && npm run package:brave && npm run package:opera"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@repo/tlinks": "workspace:*",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.439.0",
    "plasmo": "0.89.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://twitter.com/*",
      "https://x.com/*"
    ],
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "sandboxes/frame.html"
        ],
        "matches": [
          "https://twitter.com/*",
          "https://x.com/*",
          "https://pro.x.com/*"
        ]
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';",
      "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self' https://viewer.tokenscript.org/;"
    }
  }
}
