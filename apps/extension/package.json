    "clsx": "^2.1.1",
    "lucide-react": "^0.439.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@wxt-dev/module-react": "^1.1.1",
    "typescript": "^5.6.2",
    "wxt": "^0.19.11",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4"
